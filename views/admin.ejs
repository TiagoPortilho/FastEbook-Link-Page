<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Admin - FastEbook</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background: #f4f4f4;
    }
    .admin-panel {
      max-width: 800px;
      margin: 50px auto;
      background: #fff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .btn-purple {
      background-color: #A96FE8;
      border: none;
      color: white;
    }
    .btn-purple:hover {
      background-color: #7A76E4;
    }
  </style>
</head>
<body>
  <div class="admin-panel">
    <h2 class="mb-4">Gerenciar Links</h2>
    
    <form action="/admin/add" method="POST" class="row g-3 mb-4">
      <div class="col-md-5">
        <input type="text" name="titulo" class="form-control" placeholder="TÃ­tulo" required>
      </div>
      <div class="col-md-5">
        <input type="url" name="url" class="form-control" placeholder="https://..." required>
      </div>
      <div class="col-md-2 d-grid">
        <button type="submit" class="btn btn-purple">Adicionar</button>
      </div>
    </form>

    <ul class="list-group">
      <% links.forEach(link => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= link.title %></strong><br>
            <a href="<%= link.url %>" target="_blank"><%= link.url %></a>
          </div>
          <form action="/admin/delete/<%= link.id %>" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
          </form>
        </li>
      <% }) %>
    </ul>

    <div class="mt-4 text-end">
      <a href="/logout" class="btn btn-outline-secondary">Sair</a>
    </div>
  </div>
</body>
</html>
