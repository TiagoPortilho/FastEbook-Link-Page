<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FastEbook</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
</head>

<body>
    <section class="text-center py-5 hero" data-aos="fade-up">
        <div class="container d-flex flex-column align-items-center">
            <div class="logo-circle mb-4" data-aos="fade-up" data-aos-delay="50">
                <img src="/images/logo.jfif" alt="Logo FastEbook" class="img-fluid" />
            </div>
            <h1 class="display-4 fw-bold" data-aos="fade-up" data-aos-delay="100">FastEbook</h1>
            <p class="lead" data-aos="fade-up" data-aos-delay="200">Encontre seus produtos e links aqui!</p>
        </div>
    </section>

    <section class="container links d-flex flex-column align-items-center gap-3">
        <% links.forEach(link => { %>
        <div class="card shadow-sm text-center" style="width: 300px;" data-aos="fade-up" data-aos-delay="<%= link.delay %>">
            <div class="card-body">
                <a href="<%= link.url %>" class="btn btn-primary w-100"><%= link.titulo %></a>
            </div>
        </div>
        <% }) %>
    </section>

    <section class="text-center mt-5 social-links" data-aos="fade-up" data-aos-delay="500">
        <a href="https://www.facebook.com" class="social-icon"><i class="fab fa-facebook-f"></i></a>
        <a href="https://twitter.com" class="social-icon"><i class="fab fa-twitter"></i></a>
        <a href="https://www.instagram.com/fastebooksale/" class="social-icon"><i class="fab fa-instagram"></i></a>
    </section>

    <section class="text-center mt-5" data-aos="fade-up" data-aos-delay="500">
        <p class="text-muted white-text">Â© 2025 FastEbook - Todos os direitos reservados</p>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            easing: 'ease-out',
            once: true
        });
    </script>
</body>

</html>
